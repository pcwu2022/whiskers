// Test: Nested Loops
// This test verifies that nested repeat loops work correctly

when flagClicked
    say "Starting nested loop test"
    wait 0.5
    
    // Outer loop - draws a square 3 times
    repeat 3
        say "Drawing square"
        wait 0.3
        
        // Inner loop - draws one square
        repeat 4
            move 50
            turn right 90
            wait 0.2
        
        // Move to next position after completing inner loop
        turn right 45
        move 30
    
    say "Done with nested loops!"
    wait 1
    
    // More code after nested loops
    go to x: 0 y: 0
    point in direction 90
    say "Reset position"
