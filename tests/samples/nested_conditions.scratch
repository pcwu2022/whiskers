// Test: Nested Conditions
// This test verifies nested if/else statements work correctly

var score = 0
var lives = 3
var level = 1

when flagClicked
    say "Starting nested conditions test"
    wait 0.5
    
    // Check game state with nested conditions
    if (score) > 100 then
        say "High score!"
        
        if (level) > 5 then
            say "You're a pro!"
            set size to 150 %
        else
            say "Keep going!"
            set size to 120 %
        
        // Code after inner if-else
        change [color] effect by 25
    else
        say "Keep trying!"
        
        if (lives) < 2 then
            say "Low on lives!"
            set [ghost] effect to 50
        else
            say "You got this!"
            clear graphic effects
        
        // Code after inner if-else in else branch
        move 10
    
    // Code after outer if-else
    say "Condition test complete"
    wait 1

// Separate event handler
when keyPressed space
    change [score] by 10
    
    if (score) > 50 then
        say "Halfway there!"
        
        if (score) > 75 then
            say "Almost there!"

when keyPressed up
    change [level] by 1
